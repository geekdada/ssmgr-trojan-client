{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "allowJs": false,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "exclude": [
    "node_modules"
  ]
}
